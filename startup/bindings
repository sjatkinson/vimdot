   let mapleader=','
   map <leader>cd :lcd %:h<CR>

   map <F1> <Esc>
   imap <F1> <Esc>

   function! InsertTabWrapper()
      let col = col('.') - 1
      if !col || getline('.')[col - 1] !~ '\k'
         return "\<tab>"
      else
         return "\<c-p>"
      endif
   endfunction
   inoremap <tab> <c-r>=InsertTabWrapper()<cr>

