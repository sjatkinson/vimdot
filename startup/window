
set autoindent
set ruler
set number

function! CurDir()
    let curdir = substitute(getcwd(), $HOME, "~", "")
        return curdir
endfunction

set laststatus=2
set statusline+=\ \ \ [%{&ff}/%Y]
set statusline+=\ \ \ %<%20.30(%{hostname()}:%{CurDir()}%)\
set statusline+=%=%-10.(%l,%c%V%)\ %p%%/%L
